<%# Have Rouge dump a style to CSS %>
<%= Rouge::Themes::Github.render(:scope => '.highlight') %>

.highlight table pre {
  padding: 0px;
}

pre.highlight, .highlight table pre {
  word-break: none;
  word-wrap: pre;
  white-space: pre;
  overflow: auto;
}

