<!-- this is a blog post for <%= article.title %> -->
<div class="fartsy-header" style="background-image: <%= GeoPattern.generate(article.title).to_data_uri %>">
  <div class='air'></div>
</div>
<div class="post">
  <h1 class="post-title"><%= link_to article.title, article %></h1>

  <span class='post-date'><%= article.date.strftime('%b %e') %></span>

  <%= article.body %>
</div>
