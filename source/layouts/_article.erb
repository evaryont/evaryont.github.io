<!-- this is a blog post for <%= article.title %> -->
<div class="post">
  <h1 class="post-title"><%= link_to article.title, article %></h1>

  <span class='post-date'><%= article.date.strftime('%b %e') %></span>

  <%= article.body %>

  <% if article.previous_article %>
    <%= link_to "<< " + article.previous_article.title, article.previous_article, class: 'next-article' %>
  <% end %>

  <% if article.previous_article && article.next_article %> | <% end %>

  <% if article.next_article %>
    <%= link_to article.next_article.title + " >>", article.next_article, class: 'next-article' %>
  <% end %>
</div>
